mixin pricingTableCard(cardTitle = 'Starter', cardPrice = '35', cardListItems = ['Lorem Ipsum is common text'])
  .pricing-table
    .pricing-table-inner
      .pricing-table-main
        .pricing-table-header.is-revealing
          .pricing-table-title.mt-12.mb-8= cardTitle
          .pricing-table-price.mb-32.pb-24
            span.pricing-table-price-currency.h4 $
            span.pricing-table-price-amount.h2= cardPrice
        ul.pricing-table-features.list-reset.text-xs.mt-24.mb-56
          each listItem in cardListItems
            li.is-revealing
              span.list-icon
                svg(width='16', height='16', xmlns='http://www.w3.org/2000/svg')
                  path(fill='#5FFAD0', fill-rule='nonzero', d='M5.6 8.4L1.6 6 0 7.6 5.6 14 16 3.6 14.4 2z')
              span= listItem
      .pricing-table-cta.is-revealing
        a.button.button-primary.button-shadow.button-block(href='#') Get early access










section.pricing.section#pricing-section
  .section-square
  .container
    .pricing-inner.section-inner.has-top-divider
      h2.section-title.mt-0.text-center
        | Pricing
      .pricing-tables-wrap
        +pricingTableCard('Kick Star', '35', ['Custom Animation', 'Overlay Text', 'Custom Colors', '2-10 Seconds Animation', '4 Free Revisions'])
        +pricingTableCard('Rock Star', '75', ['Perfect Loop', 'Sound Effects', '10-30 Seconds Animation', 'Background Music', '10 Free Revisions'])
        +pricingTableCard('Superstar', '95', ['Transparent Background', 'Source File + GIF', 'Music and Sound Effects', '30 Seconds to 2 Minutes Animation', 'Unlimited Revisions'])
